{
  "$schema": "https://json.schemastore.org/jscpd.json",
  "threshold": 5,
  "reporters": ["json", "consoleFull"],
  "output": "metrics/latest",
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/test-utils/**",
    "**/tests/**",
    "**/__tests__/**",
    "**/storybook-static/**",
    "**/playwright-report/**",
    "**/*.config.ts",
    "**/*.config.js",
    "**/*.config.cjs",
    "**/*.config.mjs",
    "**/scripts/**",
    "**/.claude/**",
    "**/*.md",
    "**/*.json",
    "**/*.yaml",
    "**/*.yml",
    "**/*.gcn"
  ],
  "format": ["typescript", "tsx"],
  "minLines": 6,
  "minTokens": 50,
  "path": ["packages/"],
  "absolute": false
}
