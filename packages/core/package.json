{
  "name": "@kaiord/core",
  "version": "1.0.0",
  "description": "Core library for Kaiord workout data conversion",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./test-utils": {
      "import": "./dist/test-utils/index.js",
      "types": "./dist/test-utils/index.d.ts"
    }
  },
  "files": [
    "dist",
    "schema",
    "src/tests/fixtures"
  ],
  "scripts": {
    "generate:schema": "tsx scripts/generate-schema.ts",
    "generate:krd-fixtures": "tsx scripts/generate-krd-fixtures.ts",
    "prebuild": "pnpm run generate:schema",
    "build": "pnpm run generate:schema && tsup",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "lint": "tsc --noEmit && eslint . && prettier --check src scripts",
    "lint:fix": "eslint . --fix && prettier --write src scripts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@garmin/fitsdk": "^21.141.0",
    "fast-xml-parser": "^5.3.2",
    "xsd-schema-validator": "^0.11.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/node": "^20.11.0",
    "@types/rosie": "^0.0.45",
    "@vitest/coverage-v8": "^4.0.9",
    "rosie": "^2.1.1",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pablo-albaladejo/kaiord.git",
    "directory": "packages/core"
  },
  "homepage": "https://www.npmjs.com/package/@kaiord/core",
  "bugs": {
    "url": "https://github.com/pablo-albaladejo/kaiord/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "kaiord",
    "fit",
    "tcx",
    "zwo",
    "workout",
    "garmin",
    "zwift",
    "converter",
    "fitness"
  ],
  "author": "Kaiord Contributors",
  "license": "MIT"
}
