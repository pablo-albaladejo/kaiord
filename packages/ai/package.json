{
  "name": "@kaiord/ai",
  "version": "4.0.0",
  "description": "AI/LLM integration for the Kaiord health & fitness data framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "test:watch": "vitest",
    "lint": "tsc --noEmit && eslint . && prettier --check src",
    "lint:fix": "eslint . --fix && prettier --write src",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@kaiord/core": "workspace:^",
    "zod": "^4.0.0"
  },
  "peerDependencies": {
    "ai": "^6.0.0"
  },
  "devDependencies": {
    "@ai-sdk/anthropic": "^3.0.0",
    "@types/node": "^25.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "ai": "^6.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pablo-albaladejo/kaiord.git",
    "directory": "packages/ai"
  },
  "homepage": "https://www.npmjs.com/package/@kaiord/ai",
  "bugs": {
    "url": "https://github.com/pablo-albaladejo/kaiord/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "kaiord",
    "ai",
    "llm",
    "workout",
    "fitness",
    "structured-output"
  ],
  "author": "Kaiord Contributors",
  "license": "MIT"
}
