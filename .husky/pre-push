# Run lint:fix before pushing
echo "ğŸ” Running lint:fix before push..."
pnpm lint:fix

# Check if lint:fix made any changes
if [ -n "$(git status --porcelain)" ]; then
  echo "âš ï¸  Lint fixes were applied. Please review and commit the changes."
  echo "Run: git add . && git commit --amend --no-edit"
  exit 1
fi

echo "âœ… Lint check passed!"
echo ""
echo "ğŸ” Running TypeScript type check..."

# Type check all packages
pnpm -r exec tsc --noEmit

# Check exit code
if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ TypeScript type check failed! Push blocked."
  echo ""
  echo "Fix the type errors and try again."
  exit 1
fi

echo "âœ… Type check passed!"
